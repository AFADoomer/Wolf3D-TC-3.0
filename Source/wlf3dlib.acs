Script "InitializePlayer" ENTER
{
	if (GameType() != GAME_TITLE_MAP)
	{
		int lives = ScriptCall("LifeHandler", "GetLives");
		int justdied = ScriptCall("LifeHandler", "JustDied");

		if (lives == -1 && justdied)
		{
			SetPlayerProperty(0, 1, PROP_TOTALLYFROZEN);
			ScriptCall("WolfMenu", "SetMenu", "HighScores");
			SetMusic("HITLWLTZ");
		}
		else
		{
			ResetWeapons();

			int num = GetLevelInfo(LEVELINFO_LEVELNUM);	
			if (!GetCVar("g_nointro") && !(GetCVar("g_sod") && num % 100 == 21)) { ScriptCall("WolfMenu", "SetMenu", "GetPsyched"); }
		}
	}
}

Function void ResetWeapons(void)
{
	if (GetCVar("g_sod") < 2)
	{
		GiveInventory("WolfKnife", 1);
		GiveInventory("WolfPistol", 1);
	}
	else
	{
		GiveInventory("WolfKnifeLost", 1);
		GiveInventory("WolfPistolLost", 1);
	}
}

